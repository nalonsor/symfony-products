{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table table-bordered">
        <tr>
            <td>Name</td>
            <td>{{ product.name }}</td>
        </tr>
        <tr>
            <td>Description</td>
            <td>{{ product.description }}</td>
        </tr>
        <tr>
            <td>size</td>
            <td>{{ product.size }}</td>
        </tr>
    </table>

    <a href="{{ path('product_index') }}" class="btn btn-secondary">Back to list</a>
    <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-primary">Edit</a>
    <a href="{{ path('product_delete', {'id': product.id}) }}" class="btn btn-danger">Delete</a>

{% endblock %}